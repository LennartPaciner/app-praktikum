<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#D2FAFB"
    tools:context=".MainActivity">


    <ToggleButton
        android:id="@+id/toggleLanguage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/toggle_selector"
        android:checked="true"
        android:textOff=""
        android:textOn=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toggleLanguage"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/ersterbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/groceryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/my_grocery_list"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonCheckList"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/shopping_basket"
            android:visibility="visible"


            />

    </LinearLayout>

    <Space
        android:layout_width="50dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/zweiterbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/ersterbutton"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"

        android:orientation="vertical">


        <TextView
            android:id="@+id/stockTextView"
            android:layout_width="150dp"

            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/my_stock"
            android:textStyle="bold" />

        <Button

            android:id="@+id/buttonStock"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/fridge"

            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/dritterbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonInformation"
        android:layout_below="@+id/ersterbutton"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/cookingTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"

            android:gravity="center"
            android:text="@string/cooking"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonCooking"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/chef"

            />

    </LinearLayout>




    <Space
        android:layout_width="50dp"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/vierterbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonInformation"
        android:layout_below="@+id/zweiterbutton"

        android:layout_alignRight="@+id/ersterbutton"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/recipeTextView"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/recipes"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonRecipe"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/recipe_book"

            />
    </LinearLayout>


    <Button
        android:id="@+id/buttonInformation"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/information"
        android:minWidth="0dip"
        android:minHeight="0dip" />


</RelativeLayout>









